<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OperationController">

        <Pane prefHeight="88.0" prefWidth="785.0" style="-fx-background-color: #c2f6ff;">
            <Text fill="#000000d9" layoutX="93.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Graphic Binary Search Tree ">
                <font>
                    <Font name="Elephant" size="40.0" />
                </font>
            </Text>
      <Text fill="#000000d9" layoutX="344.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Operations">
         <font>
            <Font name="Bodoni MT Condensed Bold" size="40.0" />
         </font>
      </Text>
        </Pane>

           <!-- Botones de operaciones -->
        <Pane layoutY="88.0" prefHeight="77.0" prefWidth="785.0">
            <Button layoutX="649.0" layoutY="20.0" mnemonicParsing="false" onAction="#treeHeightBotton" prefWidth="130.0" text="Tree Height">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
            <Button layoutX="507.0" layoutY="20.0" mnemonicParsing="false" onAction="#heightBotton" prefWidth="132.0" text="Node Height">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
            <Button layoutX="387.0" layoutY="20.0" mnemonicParsing="false" onAction="#removeBotton" prefWidth="110.0" text="Remove">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
            <Button layoutX="267.0" layoutY="20.0" mnemonicParsing="false" onAction="#addBotton" prefWidth="110.0" text="Add">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
            <Button layoutX="137.0" layoutY="20.0" mnemonicParsing="false" onAction="#containsBotton" prefWidth="120.0" text="Contains">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
            <Button layoutX="7.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleRandomize" prefWidth="120.0" text="Randomize">
                <font>
            <Font name="Bell MT" size="20.0" />
         </font>
            </Button>
        </Pane>


        <Pane layoutY="165.0" prefHeight="50.0" prefWidth="785.0">
            <RadioButton fx:id="bstRadio" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" onAction="#choiceTree" text="BST">
                <font><Font size="16.0" /></font>
         <toggleGroup>
            <ToggleGroup fx:id="treeTypeGroup" />
         </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="avlRadio" layoutX="80.0" layoutY="15.0" mnemonicParsing="false" onAction="#choiceTree" text="AVL" toggleGroup="$treeTypeGroup">
                <font><Font size="16.0" /></font>
            </RadioButton>
            <Label fx:id="balanceStatusLabel" layoutX="241.0" layoutY="15.0" style="-fx-font-size: 16px;" text="Is the tree balanced?">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font></Label>
        </Pane>

        <!-- Área del Canvas -->
        <ScrollPane layoutX="10.0" layoutY="215.0" prefHeight="450.0" prefWidth="765.0" style="-fx-border-color: #c2f6ff; -fx-border-width: 2;">
            <Canvas fx:id="treeCanvas" height="444.0" width="758.0" />
        </ScrollPane>

</AnchorPane>
