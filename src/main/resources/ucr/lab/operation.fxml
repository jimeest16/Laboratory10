<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.OperationController"
            prefWidth="900" prefHeight="700" style="-fx-background-color: #f0f4f8;">

    <!-- Título -->
    <Label layoutX="20" layoutY="10" text="Árboles Binarios y AVL"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2a3f54;"/>

    <!-- RadioButtons para seleccionar el tipo de árbol -->
    <RadioButton fx:id="bstRadio" layoutX="30" layoutY="55" text="BST" toggleGroup="treeTypeGroup"
                 onAction="#choiceTree" selected="true"
                 style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>
    <RadioButton fx:id="avlRadio" layoutX="100" layoutY="55" text="AVL" toggleGroup="treeTypeGroup"
                 onAction="#choiceTree"
                 style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>

    <!-- Botones de acción -->
    <Button layoutX="30" layoutY="95" mnemonicParsing="false" onAction="#addBotton" text="Agregar"
            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button layoutX="110" layoutY="95" mnemonicParsing="false" onAction="#removeBotton" text="Eliminar"
            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button layoutX="200" layoutY="95" mnemonicParsing="false" onAction="#containsBotton" text="Buscar"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button layoutX="280" layoutY="95" mnemonicParsing="false" onAction="#heightBotton" text="Altura Nodo"
            style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button layoutX="390" layoutY="95" mnemonicParsing="false" onAction="#treeHeightBotton" text="Altura Árbol"
            style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button layoutX="500" layoutY="95" mnemonicParsing="false" onAction="#handleRandomize" text="Aleatorio"
            style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <!-- Label para balance -->
    <Label fx:id="balanceStatusLabel" layoutX="30" layoutY="140" text="Balance Status"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

    <!-- ScrollPane que contiene el Canvas -->
    <ScrollPane fx:id="scrollPane" layoutX="20" layoutY="170" prefWidth="860" prefHeight="500"
                style="-fx-background-color: white; -fx-border-color: #34495e; -fx-border-width: 2;">
        <content>
            <Canvas fx:id="treeCanvas" width="800" height="600" />
        </content>
    </ScrollPane>

</AnchorPane>
